<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Volunteer Fire Department</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/about.css" /> <!-- Added page-specific CSS -->
    <link rel="stylesheet" href="~/css/account.css" /> <!-- Added page-specific CSS -->
</head>
<body>
    <header class="header">
        <div class="container header-content">
            <img src="~/images/fire-badge.png" alt="" class="site-badge" />
            <h1 class="site-title">Volunteer Fire Dept</h1>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container">
            <div class="collapse navbar-collapse justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Join" asp-controller="Home">Join</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="About" asp-controller="Home">About Us</a></li> <!-- Updated link -->
                    <li class="nav-item"><a class="nav-link" asp-action="PhotoGallery" asp-controller="Home">Photo Gallery</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Contact" asp-controller="Home">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="FAQ" asp-controller="Home">FAQ</a></li>

                    <!-- Conditionally render links based on authentication status -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Show Logout link when the user is logged in -->
                        <li class="nav-item"><a class="nav-link" asp-action="Logout" asp-controller="Account">Log Out</a></li>
                    }
                    else
                    {
                        <!-- Show Sign Up and Login links when the user is not logged in -->
                        <li class="nav-item"><a class="nav-link" asp-action="SignUp" asp-controller="Account">Sign Up</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Login" asp-controller="Account">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer border-top text-center text-muted">
        <div class="container">
            &copy; 2024 - Volunteer Fire Department - <a href="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>