<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Volunteer Fire Dept</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/fire-badge.png" alt="Fire Badge" width="40" height="40" class="d-inline-block align-middle" />
                    <span class="ml-2">Volunteer Fire Dept</span>
                </a>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Join" asp-action="Index">Join</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="About" asp-action="Index">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="PhotoGallery" asp-action="Index">Photo Gallery</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="FAQ" asp-action="Index">FAQ</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Burn Ban Notification Banner -->
    <div class="scrolling-banner" id="scrollingBanner">
        <span class="banner-text">
            🔥 Fire Ban In Effect 🔥 &nbsp; 🔥 Fire Ban In Effect 🔥 &nbsp; 🔥 Fire Ban In Effect 🔥 &nbsp; 🔥 Fire Ban In Effect 🔥
        </span>
        <button class="banner-button" id="toggleButton" aria-label="Pause scrolling banner">❚❚</button>
    </div>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-muted mt-4">
        <div class="container">
            &copy; 2024 - VolunteerFireDeptTemplate
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <!-- JavaScript to Control the Scrolling Banner -->
    <script>
        const toggleButton = document.getElementById('toggleButton');
        const scrollingBanner = document.getElementById('scrollingBanner');
        let isPaused = false;

        toggleButton.addEventListener('click', () => {
            isPaused = !isPaused;
            if (isPaused) {
                scrollingBanner.classList.add('paused');
                toggleButton.textContent = '▶';  // Change to play icon
                toggleButton.setAttribute('aria-label', 'Play scrolling banner');
            } else {
                scrollingBanner.classList.remove('paused');
                toggleButton.textContent = '❚❚';  // Change to pause icon
                toggleButton.setAttribute('aria-label', 'Pause scrolling banner');
            }
        });
    </script>
</body>
</html>
