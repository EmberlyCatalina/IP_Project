@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <!-- Fire Station Image -->
    <img src="~/images/Fire-station.png" alt="Fire Department" class="img-fluid mx-auto d-block" style="max-width: 80%; margin-bottom: 20px;" />

    <!-- Updated Header -->
    <h2 class="mt-3">Volunteer Fire Department</h2>

    <!-- Mission Statement -->
    <div class="mission-statement mt-4">
        <p style="font-size: 1.2rem; max-width: 800px; margin: 0 auto;">
